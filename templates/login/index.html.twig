{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión{% endblock %}

{% block body %}
    {# 
       Nota: Normalmente el CSS de Bootstrap se pone en base.html.twig. 
       Lo pongo aquí para que funcione ya mismo sin que toque otros archivos.
    #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body { background-color: #f8f9fa; }
        .login-card { max-width: 400px; margin: auto; margin-top: 100px; padding: 20px; }
    </style>

    <div class="container">
        <div class="card shadow login-card">
            <div class="card-body">
                <h2 class="h3 mb-3 fw-normal text-center">Bienvenido</h2>
                
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3 alert alert-info">
                            Ya estás logueado como {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Cerrar sesión</a>
                        </div>
                    {% endif %}

                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Contraseña</label>
                        <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="w-100 btn btn-lg btn-primary mt-2" type="submit">
                        Entrar
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}