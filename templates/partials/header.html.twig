<header>
    {# LOGO #}
    <a href="{{ path('home') }}">
        <img src="{{ asset('assets/img/logoIcon.webp') }}" alt="Logo" class="logoIcon">
    </a>

    {# ZONA DE USUARIO #}
    <div class="login-container">
        {% if app.user %}
            {# USUARIO CONECTADO #}
            <span style="color: #c2b46c; margin-right: 10px;">
                Hola, {{ app.user.userIdentifier }}
            </span>
            <a href="{{ path('app_logout') }}" style="color: white; text-decoration: none;">
                Salir
            </a>
        {% else %}
            {# USUARIO DESCONECTADO (Aquí estaba el error) #}
            <a href="{{ path('app_login') }}">
                <img src="{{ asset('assets/img/loginIconGOLD.webp') }}" alt="Inicio de sesión">
            </a>
        {% endif %}
    </div>
</header>