<header>
    {# LOGO AL CENTRO #}
    <a href="{{ path('home') }}">
        <img src="{{ asset('assets/img/logoIcon.webp') }}" alt="Logo" class="logoIcon">
    </a>

    {# ZONA DE USUARIO (DERECHA) #}
    <div class="login-container">
        {% if app.user %}
            {# USUARIO LOGUEADO: Texto + Icono que lleva al perfil #}
            <div class="user-info">
                {# Usamos userName si existe, si no, el identificador de seguridad #}
                <span class="welcome-text">Hola, {{ app.user.userName|default(app.user.userIdentifier) }}</span>
                <a href="{{ path('app_logout') }}" class="logout-link">Salir</a>
            </div>

            <a href="{{ path('app_profile') }}">
                {# Construcci칩n din치mica del nombre de la imagen #}
                <img src="{{ asset('assets/img/loginIcon' ~ (iconColor|default('GOLD')) ~ '.webp') }}" alt="Mi Perfil" title="Ir a mi perfil">
            </a>
        {% else %}
            {# USUARIO NO LOGUEADO: Icono que lleva al login #}
            <a href="{{ path('app_login') }}">
                <img src="{{ asset('assets/img/loginIcon' ~ (iconColor|default('GOLD')) ~ '.webp') }}" alt="Iniciar sesi칩n" title="Iniciar sesi칩n">
            </a>
        {% endif %}
    </div>
</header>